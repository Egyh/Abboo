<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="text-center">プロファイル</h2>

    <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :プロファイル画像 %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :自己紹介 %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>

        <div class="form-group">
        <%= f.label :国籍 %>
        <%= f.country_select :country_code %>
      </div>

      <div class="form-group">
        <%= f.label :留学先 %>
        <%= f.text_field :abroad_record, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :留学目的 %>
        <%= f.text_field :purpose, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :留学期間 %>
        <%= f.text_field :period, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update', class: "btn btn-success" %>
      </div>

      <div><%= link_to "退会する",  unsubscribe_path, class: "btn btn-danger"%></div>
    <% end %>
    </div>
  </div>
</div>
<table class='table'>
  <tr><%= image_tag user.get_profile_image, class: "rounded-circle", size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>

 <tr>
	  <th>nationality</th>
	  <th><%= user.country_code %></th>
  </tr>
  
   <tr>
	  <th>destination</th>
	  <th><%= user.abroad_record %></th>
  </tr>
  
   <tr>
	  <th>purpose</th>
	  <th><%= user.purpose %></th>
  </tr>
  
   <tr>
	  <th>period</th>
	  <th><%= user.period %></th>
  </tr>
  
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
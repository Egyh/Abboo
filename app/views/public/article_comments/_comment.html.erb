<table class='table'>

          <% article.article_comments.each do |article_comment| %>
          <tr>
          <td> <%= image_tag article_comment.user.get_profile_image, size:'50x50', class: "rounded-circle border border-dark" %></td>
          <td><%= article_comment.comment %></td>
          <% if article_comment.user == current_user %>
          <td><%= link_to "コメント削除", article_article_comment_path(article_comment.article, article_comment), remote: true, method: :delete, class: "btn btn-danger btn-sm" %></td>
          </tr>
          <% end %>
          <% end %>
  </table>
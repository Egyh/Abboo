<div class="container" id="item-warpper">
  <div class="row">
 
    <div class="col offset-md-1">
      <div style="display: flex; align-items: flex-end;">
        <h2 style="margin-right: 10px;">Articles</h2>
        <p>（全<%= articles.count %>件）</p>
      </div>
      <div class="d-md-flex flex-wrap">
        <% articles.each do |article|%>
          <div class="card m-2 text-center card-warpper">
            <%= link_to article_path(article.id) do %>
              <%= image_tag article.get_article_image, size:'230x160', class:"card-image-top" %>
        
              <div class="card-body text-dark py-2 font-weight-bold ">
                <%= link_to article.title, article_path(article.id), class: "card-title mb-2" %>
              </div>
             <div class ="time">投稿日時：<%= l article.user.created_at, format: :short %></div> 
             <div> created by : <%= image_tag article.user.get_profile_image, class: "rounded-circle", size:'30x30' %></div>
             <% end %>
          </div>
        <% end %>
      </div>
      <div id="paginate-warpper" class="text-center">
        <%= paginate articles %>
      </div>
    </div>
  </div>
</div>
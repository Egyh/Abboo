<%= form_with model: @article,local:true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control article_title' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control article_body' %>
  </div>
  <!-- 追加部分 -->
   <div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :article_image, accept: "image/*" %>
  </div>
  
<h2>gmap</h2>
<div id='map'></div>

<style>
#map{
  height: 200px;
}
</style>

<script>
function initMap(){
  let map = new google.maps.Map(document.getElementById('map'), {
  center: {lat: <%= @article.latitude %>, lng: <%= @article.longitude %>},
  zoom: 8
  });

  var marker = new google.maps.Marker({
          map: map,

          position: {lat: <%= @article.latitude %>, lng: <%= @article.longitude %>},
      });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['SECRET_KEY'] %>&callback=initMap" async defer></script>
  
  <div class="form-group">
    <%= f.submit 'submit', class: "btn btn-success" %>
  </div>

<% end %>
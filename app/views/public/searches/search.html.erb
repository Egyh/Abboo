<div class="container">
  <div class="row">
    <div class="col-12">
        <h2 class="text-center border-bottom my-2">検索結果</h2>
          <table class="table table-hover table-inverse">
            <% if @range == "User" %>
             <thead>
                <tr>
                  <th>アイコン</th>
                  <th>名前</th>
                  <th></th>
                </tr>
                </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= image_tag user.get_profile_image, size: '50x50', class: "rounded-circle border border-dark"%></td>
                    <td><%= user.name %></td>
                    <td><%= link_to 'このユーザーをみる', user, class:"btn btn-info" %></td>
                  </tr>
                <% end %>
              </tbody>
            <% else %>
              <thead>
                <tr>
                    <th></th>
                    <th>タイトル</th>
                    <th>記事内容</th>
                    <th></th>
                    </tr>
                  </thead>
                <tbody>
                <tbody>
                <% @articles.each do |article| %>
                  <tr>
                    <td> <%= image_tag article.user.get_profile_image, size:'50x50', class: "rounded-circle border border-dark" %></td>
                    <td><%= article.title %></td>
                    <td><%= article.body %></td>
                    <td><%= link_to 'この記事をみる', article, class:"btn btn-info" %></td>
                  </tr>
                <% end %>
            <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>
<% if users.exists? %>
    <table class='table'>
      <thead>
        <tr>
          <th>アイコン</th>
          <th>名前</th>
          <th>フォロー数</th>
          <th>フォロワー数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50', class: "rounded-circle border border-dark" %></td>
          <td><%= user.name %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers.count %></td>
          <td><%= link_to 'このユーザーを見る', user, class:"btn btn-info" %></td>
        </tr>
          <% end %>
      </tbody>
    </table>
  <% else %>
    <p>ユーザーはいません</p>
<% end %>
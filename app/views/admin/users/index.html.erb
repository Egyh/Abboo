<h1>Admin::Users#index</h1>
<p>Find me in app/views/admin/users/index.html.erb</p>

 <h4><span class="bg-light bg-gradient">登録ユーザー</span></h4>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, class: "rounded-circle", size:'30x30' %></td>
        <td><%= user.name %></td>
        <td>
          <% if user.is_deleted == false %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
    <% end %>
  </tbody>
</table>